# OmniSignalAI Web Environment Variables
# Copy this file to .env and update with your values

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:5000
NEXT_PUBLIC_APP_NAME=OmniSignalAI

# API Connection (when connecting to backend)
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# Analytics (optional)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_GTM_ID=
NEXT_PUBLIC_HOTJAR_ID=

# AI Services (for interactive demos)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
REPLICATE_API_KEY=

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_INTERACTIVE_DEMO=true
NEXT_PUBLIC_ENABLE_3D_ANIMATIONS=true

# SEO
NEXT_PUBLIC_SITE_URL=https://omnisignalai.com
NEXT_PUBLIC_SITE_TITLE=OmniSignalAI - Transform Social Media Content Creation
NEXT_PUBLIC_SITE_DESCRIPTION=Generate complete social media campaigns with text and images in 30 seconds